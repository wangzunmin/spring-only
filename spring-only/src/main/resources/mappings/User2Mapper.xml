<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winchampion.credit.pure.transaction.mapper.User2Mapper">
	<insert id="insert" parameterType="user2">
		insert into user2(name)
		values(#{name})
	</insert>
	
	<select id="queryUser2" resultType="com.winchampion.credit.pure.transaction.entity.User2">
	 SELECT
            `id`, `name`
        FROM
            user2
	</select>

</mapper>